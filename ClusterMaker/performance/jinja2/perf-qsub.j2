# Submit the prebuilt qsub templates for execution on {{ cluster_name }}.

for file in `ls qsub-Axb_random.[0-9]*.{{ cluster_name }}.sh | sort -k2,2n -t.`
do
	qsub $file
	echo "Submitted $file to {{ cluster_name }} for execution..."
done

